extends ../layouts/common.pug
block content
    div(class="d-flex")
        h1 Danh sách những người thuê sách
        a(href="/users/create", class="btn btn-primary ml-2 mt-2") New User
    table(style='width:90% ', class='ml-4 table table-bordered')
            tr(class="border")
              th Name
              th Phone
              th(colspan="2") Status
            each user in users
                 tr(class="border")
                    td=user.name
                    td=user.phone
                    td
                         a(href="/users/delete/" + user.id, class="btn btn-primary") Delete
                    td 
                        a(href="/users/update/" + user.id, class="btn btn-primary") Edit

